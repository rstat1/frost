{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build frost",
			"type": "shell",
			"command": "go build -o out/frost ./cmd/watchdog/",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher":"$go",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false
			}
		}
	]
}